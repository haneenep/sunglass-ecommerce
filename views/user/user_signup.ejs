<%- include('../layout/header') -%>

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="images/img-02.png" alt="IMG">
            </div>

            <form class="login100-form validate-form" id="signupForm" action="/signup" method="post">
                <span class="login100-form-title">
                    Register Now
                </span>
				<div class="google-btn-container">
					<a href="/auth/google" class="google-btn">
						<i class="fa fa-google fa-lg"></i>
					</a>
					<div class="text-container">
					  <h4 class="txt2">&nbsp;&nbsp;or use your email for registration</h4>
				  </div>
				</div>
                <% if(locals.err){ %>
                    <p class="error-message"><%= err %></p>
                <% } %>

                <div class="wrap-input100 validate-input">
                    <input class="input100" type="text" name="name" placeholder="Name" id="name">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user-o" aria-hidden="true"></i>
                    </span>
                    <span class="error-message" id="name-error"></span>
                </div>

                <div class="wrap-input100 validate-input">
                    <input class="input100" type="text" name="email" placeholder="Email" id="email">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope-open-o" aria-hidden="true"></i>
                    </span>
                    <span class="error-message" id="email-error"></span>
                </div>

                <div class="wrap-input100 validate-input">
                    <input class="input100" type="password" name="password" placeholder="Password" id="password">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    <span class="error-message" id="password-error"></span>
                </div>

                <div class="wrap-input100 validate-input">
                    <input class="input100" type="password" name="confirmPassword" placeholder="Confirm Password" id="confirmPassword">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    <span class="error-message" id="confirmPassword-error"></span>
                </div>

                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn" id="submitBtn" disabled>
                        Sign Up
                    </button>
                </div>

                <div class="text-center p-t-12">
                    <a class="txt2" href="/login">
                        Back to login
                        <i class="fa fa-long-arrow-left m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../layout/footer') -%>
