<%- include('../layout/userHead') -%>

<!-- Header Section Begin -->
<%- include('../layout/userHeaderNav') -%>
<!-- Header Section End -->

    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #ffffff;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }
        .wishlist-header {
            margin: 20px 0;
        }
        .wishlist-header h1 {
            font-size: 24px;
            font-weight: 600;
            margin: 0;
        }
        .wishlist-header span {
            font-weight: normal;
            color: #666;
        }
        .wishlist-grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 20px;
        }
        .wishlist-item {
            border: 1px solid #e0e0e0;
            border-radius: 4px;
            overflow: hidden;
            position: relative;
        }
        .wishlist-item img {
            width: 100%;
            height: 280px;
            object-fit: cover;
        }
        .wishlist-item-content {
            padding: 12px;
        }
        .wishlist-item h3 {
            font-size: 14px;
            margin: 0 0 8px 0;
            font-weight: normal;
        }
        .price {
            font-size: 16px;
            font-weight: bold;
        }
        .original-price {
            color: #888;
            text-decoration: line-through;
            margin-left: 5px;
            font-weight: normal;
        }
        .discount {
            color: #ff905a;
            margin-left: 5px;
        }
        .out-of-stock {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: #ff3e6c;
            color: white;
            padding: 4px 8px;
            font-size: 12px;
            font-weight: bold;
        }
        .remove-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: none;
            border: none;
            color: #888;
            font-size: 20px;
            cursor: pointer;
        }
        .action-btn {
            display: block;
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            font-weight: bold;
            cursor: pointer;
        }
        .move-to-bag {
            background-color: #ff3e6c;
            color: white;
        }
        .show-similar {
            background-color: #f5f5f6;
            color: #282c3f;
        }
    </style>

    <div class="container">
        <div class="wishlist-header">
            <h1>My Wishlist <span>179 items</span></h1>
        </div>
        <div class="wishlist-grid">
            <!-- Item 1 -->
            <div class="wishlist-item">
                <img src="/api/placeholder/200/280" alt="Kook N Keech Printed T-shirt">
                <span class="out-of-stock">OUT OF STOCK</span>
                <button class="remove-btn">&times;</button>
                <div class="wishlist-item-content">
                    <h3>Kook N Keech Printed Drop Shoulder T-shirt</h3>
                    <div>
                        <span class="price">₹899</span>
                    </div>
                    <button class="action-btn show-similar">SHOW SIMILAR</button>
                </div>
            </div>
            
            <!-- Item 2 -->
            <div class="wishlist-item">
                <img src="/api/placeholder/200/280" alt="HIGHLANDER Men White Printed T-shirt">
                <button class="remove-btn">&times;</button>
                <div class="wishlist-item-content">
                    <h3>HIGHLANDER Men White Printed Round Neck T-shirt</h3>
                    <div>
                        <span class="price">₹277</span>
                        <span class="original-price">₹749</span>
                        <span class="discount">(63% OFF)</span>
                    </div>
                    <button class="action-btn move-to-bag">MOVE TO BAG</button>
                </div>
            </div>
            
        </div>
    </div>

    <script>
        document.querySelectorAll('.remove-btn').forEach(button => {
            button.addEventListener('click', function() {
                this.closest('.wishlist-item').remove();
            });
        });
    </script>


